<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>FluentAssertions - Should Throw Async</Title>
            <Shortcut>shouldta</Shortcut>
            <Author>Manuel RÃ¶mer</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>method</ID>
                    <ToolTip>The async method that should throw.</ToolTip>
                    <Default>FooAsync()</Default>
                </Literal>
                <Literal>
                    <ID>exception</ID>
                    <ToolTip>The expected exception.</ToolTip>
                    <Default>Exception</Default>
                </Literal>
            </Declarations>
            <Code Language="csharp">
                <![CDATA[Func<Task> testCode = async () => await $method$;
                await testCode.Should().ThrowAsync<$exception$>();$end$]]>
            </Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>
